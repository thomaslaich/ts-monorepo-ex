{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "REDIS_HOST",
    "REDIS_PORT",
    "AMQP_HOST",
    "AMQP_PORT",
    "PG_USER",
    "PG_HOST",
    "PG_DATABASE",
    "PG_PASSWORD",
    "PG_PORT"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "inputs": ["Dockerfile"]
    },
    "//#applyk8s": {
      "dependsOn": ["@mono-ex/api#deploy", "@mono-ex/worker#deploy"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "format": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
